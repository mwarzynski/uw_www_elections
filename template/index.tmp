<!DOCTYPE html>
<html>

<head>
    <title>{{ title }}</title>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <link rel="stylesheet" href="css/style.css"/>

    {% if country_mode == 1 %}
    <script type="text/javascript" src="js/loader.js"></script>
    <script type="text/javascript" src="js/maps.js"></script>
    {% endif %}
</head>


<body>

<header id="top_header">
    <h1>{{ title }}</h1>
</header>

<div id="wrapper">

    <div>
        <div class="results">
            <table>
                <thead>
                <tr>
                    <th>Lp</th>
                    <th>Imię i nazwisko</th>
                    <th>Głosów</th>
                    <th>Wynik wyborczy</th>
                </tr>
                </thead>

                <tbody>

                {% for person in people %}
                <tr>
                    <td>{{ person.index }}</td>
                    <td>{{ person.name }}</td>
                    <td>{{ person.votes }}</td>
                    <td>
                        <div class="results-bar">
                            <div style="width: {{ person.percentage }}%;"
                                 class="{% if person.index == 1 %}red {% endif %}{% if person.index == 2%}blue{% endif %}"></div>
                        </div>
                    </td>
                </tr>
                {% endfor %}

                </tbody>

            </table>
        </div>
    </div>

    <div>
        {% if country_mode %}
        <div id="map"></div>
        {% endif %}

        {% if gmina_mode %}
        <div id="obwody">
            <table>
                <thead>
                <tr>
                    <th>Lp</th>
                    <th>Nazwa</th>
                    {% for kandydat in kandydaci %}
                    <th>{{ kandydat }}</th>
                    {% endfor %}
                </tr>
                </thead>

                <tbody>

                {% for obwod in obwody %}

                <tr>
                    <td>{{ obwod.indeks }}</td>
                    <td>{{ obwod.nazwa }}</td>
                    {% for wynik in obwod.wyniki %}
                    <td>{{ wynik }}</td>
                    {% endfor %}
                </tr>

                {% endfor %}

                </tbody>

            </table>
        </div>
        {% endif %}

        {% if pages|length > 0 %}
        <ul>
            {% for page in pages %}
            <li><a href="{{ page.link }}">{{ page.name }}</a></li>
            {% endfor %}
        </ul>
        {% endif %}

    </div>

</div>

</body>

</html>
